<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <handlers>
            <add name="Python FastCGI"
                 path="*"
                 verb="*"
                 modules="FastCgiModule"
                 scriptProcessor="D:\07-03-2025\ai_chatbot\backend\venv\Scripts\python.exe|D:\07-03-2025\ai_chatbot\backend\venv\lib\site-packages\wfastcgi.py"
                 resourceType="Unspecified"
                 requireAccess="Script" />
        </handlers>
        <fastCgi>
            <application fullPath="D:\07-03-2025\ai_chatbot\backend\venv\Scripts\python.exe"
                         arguments="D:\07-03-2025\ai_chatbot\backend\venv\lib\site-packages\wfastcgi.py"
                         maxInstances="8"
                         instanceMaxRequests="20000">
                <environmentVariables>
                    <environmentVariable name="WSGI_HANDLER" value="app.app" />
                    <environmentVariable name="PYTHONPATH" value="D:\07-03-2025\ai_chatbot\backend" />
                    <environmentVariable name="FLASK_ENV" value="production" />
                    <environmentVariable name="CRM_API_URL" value="https://newtonerp.in/NewtonApps/NewtonCrmAI/EnquiryDetails/AddLead" />
                </environmentVariables>
            </application>
        </fastCgi>
        <security>
            <requestFiltering>
                <requestLimits maxAllowedContentLength="1073741824" />
            </requestFiltering>
        </security>
        <httpErrors errorMode="Custom">
            <remove statusCode="500" subStatusCode="-1" />
            <error statusCode="500" prefixLanguageFilePath="" path="500.htm" responseMode="File" />
        </httpErrors>
        <directoryBrowse enabled="false" />
    </system.webServer>
</configuration>